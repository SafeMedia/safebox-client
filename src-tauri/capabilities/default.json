{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "store:default",
    "core:path:default",
    "fs:allow-open",
    "fs:allow-stat",
    "fs:default",
    "fs:read-all",
    "fs:allow-read",
    "fs:allow-read-file",
    "core:event:default",
    "core:event:allow-emit",
    "core:event:allow-listen",
    "clipboard-manager:allow-write-text",
    "clipboard-manager:default",
    "fs:allow-app-write",
    "fs:write-all",
    "fs:allow-write-file",
    "fs:allow-create",
    "fs:allow-write-text-file",
    "dialog:allow-open",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "*/**"
        }
      ]
    }
  ]
}